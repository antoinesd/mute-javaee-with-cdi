<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xmlns="http://jboss.org/schema/arquillian"
			xsi:schemaLocation="http://jboss.org/schema/arquillian http://www.jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<!-- Uncomment to have test archives exported to the file system for inspection -->
	<engine>
		<property name="deploymentExportPath">target/arquillian</property>
	</engine>

	<container qualifier="weld-embedded" default="true">
		<configuration>
			<property name="environment">EE_INJECT</property>
		</configuration>
	</container>
	
	<container qualifier="wildfly-arquillian-container-embedded">
	</container>

	<container qualifier="OpenWebBeans">
	</container>

	<container qualifier="jbossas-managed-7">
	</container>

	<container qualifier="jbossas-remote-7">
	</container>

	<container qualifier="jbossas-managed-6">
	</container>

	<container qualifier="jbossas-remote-6">
	</container>

	<container qualifier="glassfish-remote-3.1">
	</container>

</arquillian>
